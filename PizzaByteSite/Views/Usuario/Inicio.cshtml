@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Painel
            <small>Resumo das atividades</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Usuario/Inicio"><i class="fa fa-dashboard"></i> Início</a></li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>150</h3>
                        <p>Pedidos da semana</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-shopping-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer">Saiba mais <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>53<sup style="font-size: 20px">%</sup></h3>
                        <p>Contas quitadas</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-bar-chart"></i>
                    </div>
                    <a href="#" class="small-box-footer">Saiba mais <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>44</h3>
                        <p>Novos clientes</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-user-plus"></i>
                    </div>
                    <a href="#" class="small-box-footer">Saiba mais <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-6">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>6</h3>
                        <p>Pedidos cancelados</p>
                    </div>
                    <div class="icon">
                        <i class="fa fa-pie-chart"></i>
                    </div>
                    <a href="#" class="small-box-footer">Saiba mais <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <section class="col-lg-7 connectedSortable">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs pull-right">
                        <li class="active"><a href="#revenue-chart" data-toggle="tab">Semana</a></li>
                        <li><a href="#sales-chart" data-toggle="tab">Tipos</a></li>
                        <li class="pull-left header"><i class="fa fa-shopping-bag"></i> Vendas da semana</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <div class="chart tab-pane active" id="revenue-chart" style="position: relative; height: 300px;"></div>
                        <div class="chart tab-pane" id="sales-chart" style="position: relative; height: 300px;"></div>
                    </div>
                </div>
                <div class="box box-success">
                    <div class="box-header">
                        <i class="fa fa-comments-o"></i>
                        <h3 class="box-title">Suporte</h3>
                    </div>
                    <div class="box-body chat" id="chat-box">
                        <div class="item">
                            <img src="~/Content/PizzaByteSite/img/user4-128x128.jpg" alt="user image" class="online">
                            <p class="message">
                                <a href="#" class="name">
                                    <small class="text-muted pull-right"><i class="fa fa-clock-o"></i> 2:15</small>
                                    Usuário
                                </a>
                                Olá, ocorreu um erro aqui ontem. Pode ver pra gente?
                            </p>
                        </div>
                        <div class="item">
                            <img src="~/Content/PizzaByteSite/img/user3-128x128.jpg" alt="user image" class="offline">
                            <p class="message">
                                <a href="#" class="name">
                                    <small class="text-muted pull-right"><i class="fa fa-clock-o"></i> 5:15</small>
                                    Suporte
                                </a>
                                Boa noite.
                                O erro foi corrigido, é só refazer a operação.
                            </p>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="input-group">
                            <input class="form-control" placeholder="Type message...">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-success"><i class="fa fa-plus"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="col-lg-5 connectedSortable">
                <div class="box box-solid bg-teal-gradient">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-files-o"></i>  Totais de pedidos por mês</h3>
                        <div class="box-tools pull-right">
                        </div>
                    </div>
                    <div class="box-body border-radius-none">
                        <div class="chart" id="line-chart" style="height: 250px;"></div>
                    </div>
                    <div class="box-footer no-border">
                        <div class="row">
                            <div class="col-xs-4 text-center" style="border-right: 1px solid #f4f4f4">
                                <input type="text" class="knob" data-readonly="true" value="20" data-width="60" data-height="60"
                                       data-fgColor="#39CCCC">
                                <div class="knob-label">Balcão</div>
                            </div>
                            <div class="col-xs-4 text-center" style="border-right: 1px solid #f4f4f4">
                                <input type="text" class="knob" data-readonly="true" value="50" data-width="60" data-height="60"
                                       data-fgColor="#39CCCC">
                                <div class="knob-label">Entrega</div>
                            </div>
                            <div class="col-xs-4 text-center">
                                <input type="text" class="knob" data-readonly="true" value="30" data-width="60" data-height="60"
                                       data-fgColor="#39CCCC">
                                <div class="knob-label">Retirada</div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/inicio")
    @Scripts.Render("~/bundles/inicio")
}

<script>
    $(document).ready(function () {

        var retorno = '@TempData["Retorno"]';
        toastr.options = {
            "showDuration": "400",
            "hideDuration": "600",
            "timeOut": "3000",
            "positionClass": "toast-top-right",
            "preventDuplicates": "true"
        }

        switch (retorno) {
            case "BACKUPRESTAURADO":
                toastr.success("Backup restaurado com sucesso!", "Tudo certo!");
                break;

            default:
                break;
        }
    });
</script>