@model PizzaByteSite.Models.ExclusaoModel

@{
    ViewBag.Title = "Excluir produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <h1>
            Produtos
            <small>Excluir</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Usuario/Inicio"><i class="fa fa-home"></i> Inicio</a></li>
            <li><a href="~/Produto/Index"><i class="fa fa-tags"></i> Produtos</a></li>
            <li class="active"><i class="fa fa-remove"></i> Excluir</li>
        </ol>
    </div>

    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h2 class="box-title">Confirme a exclusão do produto</h2>
                    </div>

                    @using (Html.BeginForm("ExcluirProduto", "Produto"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="box-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.Descricao)
                                        <br />
                                        <p>
                                            Tem certeza que deseja excluir o produto "<b>@Model.Descricao</b>"?
                                        </p>
                                        <h4 class="text-danger">Essa operação não poderá ser desfeita.</h4>
                                        <br />
                                    </div>
                                </div>

                                <div class="box-footer">
                                    <button type="button" class="btn btn-default" onclick="window.history.back();"><i class="fa fa-mail-reply "></i> Cancelar</button>
                                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Excluir</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
