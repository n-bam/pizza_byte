<aside class="main-sidebar">
    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/PizzaByteSite/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@SessaoUsuario.SessaoLogin.NomeUsuario</p>
            </div>
        </div>
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">Opções de cadastro</li>

            <li class="@Html.IsSelected(controller: "Pedido")">
                <a href="@Url.Action("Index", "Pedido")"><i class="fa fa-files-o"></i><span> &nbsp;Pedidos</span></a>
            </li>

            <li class="@Html.IsSelected(controller: "Entregas")">
                <a href="@Url.Action("Index", "PedidoEntrega")"><i class="fa fa-cubes"></i><span> &nbsp;Entregas</span></a>
            </li>

            <li class="@Html.IsSelected(controller: "MovimentoCaixa")">
                <a href="@Url.Action("Index", "MovimentoCaixa")"><i class="fa fa-calculator"></i><span> &nbsp;Caixa</span></a>
            </li>

            <li class="treeview @Html.IsSelected(controller: "Contas")">
                <a href="@Url.Action("Contas")">
                    <i class="fa fa-dollar"></i> <span>Contas</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@Html.IsSelected(action: "ContaPagar")"><a href="@Url.Action("Index", "ContaPagar")"><i class="fa fa-money"></i> &nbsp;Pagar</a></li>
                    <li class="@Html.IsSelected(action: "ContaReceber")"><a href="@Url.Action("Index", "ContaReceber")"><i class="fa fa-money"></i> &nbsp;Receber</a></li>
                </ul>
            </li>

            <li class="treeview @Html.IsSelected(controller: "Cadastros")">
                <a href="@Url.Action("Cadastros")">
                    <i class="fa fa-edit"></i> <span>Cadastros</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="@Html.IsSelected(action: "Produto")"><a href="@Url.Action("Index", "Produto")"><i class="fa fa-tags"></i> &nbsp;Produtos</a></li>
                    <li class="@Html.IsSelected(action: "Cliente")"><a href="@Url.Action("Index", "Cliente")"><i class="fa fa-users"></i> &nbsp;Clientes</a></li>
                    <li class="@Html.IsSelected(action: "Fornecedor")"><a href="@Url.Action("Index", "Fornecedor")"><i class="fa fa-truck"></i> &nbsp;Fornecedores</a></li>
                    <li class="@Html.IsSelected(action: "Funcionario")"><a href="@Url.Action("Index", "Funcionario")"><i class="fa fa-files-o"></i> &nbsp;Funcionários</a></li>
                </ul>
            </li>

            <li class="treeview @Html.IsSelected(controller: "CadastroBasico")">
                <a href="@Url.Action("CadastroBasico")"><i class="fa fa-book"></i> <span> &nbsp;Cadastros básicos</span><span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span></a>
                <ul class="treeview-menu">
                    <li class="@Html.IsSelected(action: "Cep")"><a href="@Url.Action("Index", "Cep")"><i class="fa fa-paper-plane-o"></i> &nbsp;CEPs</a></li>
                    <li class="@Html.IsSelected(action: "TaxaEntrega")"><a href="@Url.Action("Index", "TaxaEntrega")"><i class="fa fa-motorcycle"></i> &nbsp;Taxas de entrega</a></li>
                    <li class="@Html.IsSelected(action: "Usuario")"><a href="@Url.Action("Index", "Usuario")"><i class="fa fa-male"></i> &nbsp;Usuários</a></li>
                </ul>
            </li>

            <li class="header">Relatórios</li>

            <li class="treeview @Html.IsSelected(controller: "Relatorios")">
                <a href="@Url.Action("Listagens")">
                    <i class="fa fa-file-text"></i> <span> &nbsp;Listagens básicas</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-exchange"></i> Operações
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@Html.IsSelected(action: "ListagemPedidosResumida")"><a href="@Url.Action("ListagemPedidosResumida", "RelatoriosListagem")"><i class="fa fa-files-o"></i> &nbsp;Pedidos resumidos</a></li>
                            <li class="@Html.IsSelected(action: "ListagemPedidosDetalhada")"><a href="@Url.Action("ListagemPedidosDetalhada", "RelatoriosListagem")"><i class="fa fa-files-o"></i> &nbsp;Pedidos detalhados</a></li>
