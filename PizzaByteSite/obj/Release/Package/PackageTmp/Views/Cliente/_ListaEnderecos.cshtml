@model PizzaByteSite.Models.ClienteModel

<h2 class="h3">Endereços cadastrados para este cliente</h2>

<div class="box-body">
    <div class="form-horizontal">

        <div class="box-body table-responsive">
            <table class="table table-hover" id="tblEnderecos">
                <thead>
                    <tr>
                        <th>Logradouro</th>
                        <th>Número</th>
                        <th>Bairro</th>
                        <th>Cidade</th>
                        <th>Inativo</th>
                        <th>Opções</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

            <div class="overlay" id="divCarregando">
                <i class="fa fa-refresh fa-spin"></i>
            </div>
        </div>

        <div class="box-footer clearfix" id="divPaginas">
            @*Paginação da pesquisa*@
        </div>

        <div class="box-footer">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <a class="btn btn-primary" href="~/ClienteEndereco/Incluir/@Model.Id?nomeCliente=@(Model.Nome)"><i class="fa fa-plus"></i> Incluir endereço</a>
            </div>
        </div>
    </div>
</div>
