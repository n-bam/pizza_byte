@model PizzaByteSite.Models.ExclusaoModel

@{
    ViewBag.Title = "Estornar pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <h1>
            Pedido
            <small>Estornar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Usuario/Inicio"><i class="fa fa-home"></i> Inicio</a></li>
            <li><a href="~/Pedido/Index"><i class="fa fa-files-o"></i> Pedido</a></li>
            <li class="active"><i class="fa fa-trash"></i> Estornar</li>
        </ol>
    </div>

    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h2 class="box-title">Confirme o estorno do pedido e preencha a justificativa</h2>
                    </div>

                    @using (Html.BeginForm("CancelarPedido", "Pedido"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="box-body">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.Descricao)

                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Justificativa, new { @class = "control-label col-lg-1 col-md-2 col-sm-3 col-xs-12" })
                                            <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
                                                @Html.EditorFor(m => m.Justificativa, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                                @Html.ValidationMessageFor(m => m.Justificativa, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <p>
                                            Tem certeza que deseja estornar o pedido "<b>@Model.Descricao</b>"?
                                        </p>
                                        <h4 class="text-danger">Essa operação não poderá ser desfeita.</h4>
                                        <br />

                                    </div>
                                </div>

                                <div class="box-footer">
                                    <a class="btn btn-default" href="~/Pedido/Index"><i class="fa fa-mail-reply"></i> Cancelar</a>
                                    <button type="submit" class="btn btn-danger"><i class="fa fa-ban"></i> Estornar</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
