<div class="modal fade" id="modalIncluir">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Incluir movimento de caixa</h4>
            </div>
            <div class="modal-body">
                <div class="box" style="border:hidden">
                    <div class="box-body">
                        <div class="form-group">
                            <input id="txtIndicadorSaida" value="false" hidden="hidden" />

                            @Html.Label("Justificativa", new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                            <div class="col-lg-9 col-md-10 col-sm-9 col-xs-12">
                                <input type="text" id="txtJustificativa" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Valor", new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                            <div class="col-lg-2 col-md-3 col-sm-9 col-xs-12">
                                <input type="text" id="txtValor" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-3 col-lg-10 col-md-10 col-sm-9 col-xs-12">
                            </div>
                        </div>
                    </div>

                    <div class="overlay" id="divCarregandoIncluir">
                        <i class="fa fa-refresh fa-spin"></i>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary pull-left" id="btnSalvarInclusao"><i class="fa fa-save"></i> Gravar</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#txtValor").maskMoney({ allowNegative: false, decimal: "," });

        $("#btnSalvarInclusao").click(function () {
            IncluirMovimento();
        });
    });
</script>