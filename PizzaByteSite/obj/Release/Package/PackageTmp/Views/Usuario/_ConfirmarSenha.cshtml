@model PizzaByteSite.Models.UsuarioModel

<div class="modal fade" id="modalConfirmarSenha">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Confirme a senha para continuar</h4>
            </div>
            <div class="modal-body">
                <p>Para continuar, por favor informe a senha atual deste usuário:</p>

                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            @Html.EditorFor(m => m.SenhaAntiga, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="text-align:center">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-mail-reply "></i> Cancelar</button>
                <button type="submit" class="btn btn-primary">Gravar</button>
            </div>
        </div>
    </div>
</div>