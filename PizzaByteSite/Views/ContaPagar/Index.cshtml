@model PizzaByteSite.Models.FiltrosContaPagarModel

@{
    ViewBag.Title = "Contas a pagar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="form-horizontal">
        <div class="content-header">
            <h1>
                Contas a pagar
                <small>Listagem</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="~/Usuario/Inicio"><i class="fa fa-home"></i> Inicio</a></li>
                <li><a class="active"><i class="fa fa-money"></i> Contas a pagar</a></li>
            </ol>
        </div>

        <div class="content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <h3 class="box-title">Pesquisa de contas</h3>
                        </div>

                        <div class="box-body">
                            <div class="form-group">
                                @Html.LabelFor(m => m.PesquisarPor, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-2 col-md-4 col-sm-9 col-xs-12">
                                    @Html.DropDownListFor(m => m.PesquisarPor, Model.ListaOpcaoData, new { @class = "form-control" })
                                </div>

                                @Html.LabelFor(m => m.DataInicio, new { @class = "control-label col-lg-1 col-md-1 col-sm-3 col-xs-12" })
                                <div class="col-lg-2 col-md-3 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.DataInicio, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                </div>

                                @Html.LabelFor(m => m.DataFim, new { @class = "control-label col-lg-1 col-md-1 col-sm-3 col-xs-12" })
                                <div class="col-lg-2 col-md-3 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.DataFim, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Descricao, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-8 col-md-10 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Descricao, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.PrecoInicial, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-2 col-md-2 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.PrecoInicial, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                </div>

                                @Html.LabelFor(m => m.PrecoFinal, new { @class = "control-label col-lg-1 col-md-1 col-sm-3 col-xs-12" })
                                <div class="col-lg-2 col-md-2 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.PrecoFinal, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                                </div>

                                @Html.LabelFor(m => m.Status, new { @class = "control-label col-lg-1 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-2 col-md-3 col-sm-9 col-xs-12">
                                    @Html.DropDownListFor(m => m.Status, Model.ListaStatus, "Todos", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-3 col-lg-10 col-md-10 col-sm-9 col-xs-12">
                                    <button class="btn btn-primary" id="btnBuscarContaPagar"><i class="fa fa-search"></i> Buscar</button>
                                </div>
                            </div>
                        </div>

                        <div class="overlay" id="divCarregando">
                            <i class="fa fa-refresh fa-spin"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="box">
                        <div class="box-header with-border">
                            <div class="form-group">
                                <div class="col-md-6">
                                    <h3 class="box-title">Lista de contas cadastradas</h3>
                                </div>
                                <div class="col-md-6 alinhadoDireita">
                                    <a class="btn btn-primary" href="Incluir"><i class="fa fa-plus"></i> Nova conta</a>
                                </div>
                            </div>
                        </div>

                        <div class="box-body table-responsive">
                            <table class="table table-hover" id="tblResultados">
                                <thead>
                                    <tr>
                                        <th>Vencimento</th>
                                        <th>Descrição</th>
                                        <th>Status</th>
                                        <th>Valor</th>
                                        <th>Opções</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>

                        <div class="box-footer clearfix" id="divPaginas">
                            @*Paginação da pesquisa*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/PizzaByteSite/plugins/jQueryUI/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/PizzaByteSite/plugins/jQueryUI/toastr.min.js"></script>
<script src="~/Scripts/PizzaByteSite/Telas/Geral.js"></script>
<script src="~/Scripts/PizzaByteSite/Telas/IndexContaPagar.js"></script>
<script src="~/Scripts/PizzaByteSite/plugins/mask/jquery.maskMoney.min.js"></script>
<script src="~/Scripts/PizzaByteSite/plugins/mask/jquery.mask.min.js"></script>

<script>
    $(document).ready(function () {

        $("#DataInicio").mask("99/99/9999");
        $("#DataFim").mask("99/99/9999");

        $("#PrecoInicial").maskMoney({ allowNegative: false, decimal: "," });
        $("#PrecoFinal").maskMoney({ allowNegative: false, decimal: "," });

        var retorno = '@TempData["Retorno"]';
        MostrarMensagemRetorno(retorno, "A conta a pagar");
        BuscarContaPagar(1);

        $("#btnBuscarContaPagar").click(function () {
            BuscarContaPagar(1);
        });

        $(document).keypress(function (e) {
            if (e.keyCode === 13) {
                $("#btnBuscarContaPagar").click();
            }
        });
    });
</script>
