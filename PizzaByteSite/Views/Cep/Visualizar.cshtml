@model PizzaByteSite.Models.CepModel

@{
    ViewBag.Title = "Editar cep";
    Layout = "~/Views/Shared/_Layout.cshtml";
}cionario
<div class="content-wrapper">
    <div class="content-header">
        <h1>
            CEPs
            <small>Visualizar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="~/Usuario/Inicio"><i class="fa fa-home"></i> Inicio</a></li>
            <li><a href="~/Cep/Index"><i class="fa fa-tags"></i> Cep</a></li>
            <li class="active"><i class="fa fa-eye"></i> Visualizar</li>
        </ol>
    </div>

    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h2 class="box-title">Informações do cep</h2>
                    </div>
                    <div class="box-body">
                        <div class="form-horizontal">


                            <div class="form-group">
                                @Html.LabelFor(m => m.Inativo, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-3" })
                                <div class="col-lg-1 col-md-1 col-sm-2 col-xs-12" style="margin-top: 5px" disabled>
                                    @Html.EditorFor(m => m.Inativo, new { @class = "form-control checkbox", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(m => m.Inativo, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Cep, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-9 col-md-10 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Cep, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(m => m.Cep, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                @Html.LabelFor(m => m.Logradouro, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-9 col-md-10 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Logradouro, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                                    @Html.ValidationMessageFor(m => m.Logradouro, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Bairro, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-4 col-md-4 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Bairro, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(m => m.Bairro, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(m => m.Cidade, new { @class = "control-label col-lg-2 col-md-2 col-sm-3 col-xs-12" })
                                <div class="col-lg-4 col-md-4 col-sm-9 col-xs-12">
                                    @Html.EditorFor(m => m.Cidade, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(m => m.Cidade, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.DataInclusao, new { @class = "col-lg-4 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small" })
                                <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small">
                                    @Html.HiddenFor(m => m.DataInclusao)
                                    @Html.DisplayFor(m => m.DataInclusao, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DataInclusao, "", new { @class = "text-danger" })
                                </div>

                                @Html.LabelFor(m => m.DataAlteracao, new { @class = "col-lg-4 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small" })
                                <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12 alinhadoDireita small">
                                    @Html.HiddenFor(m => m.DataAlteracao)
                                    @Html.DisplayFor(m => m.DataAlteracao, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DataAlteracao, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="box-footer">
                                <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-3">
                                    <a class="btn btn-default" href="~/Cep/Index"><i class="fa fa-mail-reply"></i> Cancelar</a>
                                    <a class="btn btn-primary" href="~/Cep/Editar/@Model.Id"><i class="fa fa-pencil"></i> Editar</a>
                                    <a class="btn btn-danger" href="~/Cep/Excluir/@Model.Id?Descricao=@(Model.Logradouro)"><i class="fa fa-trash"></i> Excluir</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/PizzaByteSite/plugins/mask/jquery.mask.min.js"></script>

<script>
    $(".form-control").attr("readonly", "readonly");
    $("#Telefone").mask("(99) 9999-99999", { placeholder: "(__) _____-____" });
</script>
